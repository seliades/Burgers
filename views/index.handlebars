<h1>Grab a Burger!</h1>

<h2>Here are some burgers to eat</h2>

<div>
  {{#each burgers}}
  {{#unless this.eaten}}
  <div class="row">
    <div class="col-md-7">
      <div class="uneaten">
        <p class="text-center">
          {{this.id}}. {{this.burger_name}}
        </p>
      </div>
    </div>
    <div class="col-md-5">
      <div>
        <form action="/{{this.id}}" method="POST">
          <input type="text" id="ca" name="customer" class="float">
          <input type="hidden" name="eaten" value="true">
          <button type="submit" class="center-block" id="submit">Devour It!</button>
        </form>
      </div>
    </div>
  </div>
  {{/unless}}
  {{/each}}
</div>

<h2>Wow you ate a lot!</h2>

<ul>
  {{#each burger}}
  {{#if eaten}}
  {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newBurger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button type="submit">Place Your Order</button>
</form>